{
  "name": "file-hasher-v2",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Secure client-side file hash generator with support for MD5, SHA-1, SHA-256, and SHA-512 algorithms",
  "author": {
    "name": "Domi Adiwijaya",
    "email": "domy.adiwijaya@gmail.com",
    "url": "https://github.com/Elcapitanoe"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Elcapitanoe/File-Hasher-V2.git"
  },
  "homepage": "https://file-hasher-v2.vercel.app",
  "keywords": [
    "file-hash",
    "cryptographic-hash",
    "md5",
    "sha1",
    "sha256",
    "sha512",
    "security",
    "privacy",
    "client-side",
    "typescript",
    "react",
    "vite"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,md}\""
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "crypto-js": "^4.2.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4",
    "lucide-react": "^0.468.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "tailwindcss": "^3.4.17",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.2",
    "@tailwindcss/forms": "^0.5.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}